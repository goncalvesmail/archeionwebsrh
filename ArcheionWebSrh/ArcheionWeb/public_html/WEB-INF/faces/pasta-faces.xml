<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE faces-config PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
                              "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">
<faces-config>
	<managed-bean>
		<managed-bean-name>pastaBean</managed-bean-name>
		<managed-bean-class>
			br.com.archeion.mbean.pasta.PastaMBean
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>expurgoPastaBean</managed-bean-name>
		<managed-bean-class>
			br.com.archeion.mbean.pasta.ExpurgoPastaMBean
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>emprestimoPastaBean</managed-bean-name>
		<managed-bean-class>
			br.com.archeion.mbean.pasta.EmprestimoPastaMBean
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>localizarPastaBean</managed-bean-name>
		<managed-bean-class>
			br.com.archeion.mbean.pasta.LocalizarPastaMBean
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

		
	<navigation-rule>
		<from-view-id>*</from-view-id>
		
		<navigation-case>
			<from-outcome>formularioLocalizarPasta</from-outcome>
			<to-view-id>
				/protected/jsps/pasta/formularioLocalizarPasta.jsf
			</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>formularioPastaEtiqueta</from-outcome>
			<to-view-id>
				/protected/jsps/pasta/formularioPastaEtiqueta.jsf
			</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>formularioPasta</from-outcome>
			<to-view-id>
				/protected/jsps/pasta/formularioPasta.jsf
			</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>formularioAlterarPasta</from-outcome>
			<to-view-id>
				/protected/jsps/pasta/formularioAlterarPasta.jsf
			</to-view-id>
		</navigation-case>		
		<navigation-case>
			<from-outcome>listaPasta</from-outcome>
			<to-view-id>
				/protected/jsps/pasta/listaPasta.jsf
			</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>formularioExpurgoPasta</from-outcome>
			<to-view-id>
				/protected/jsps/pasta/formularioExpurgoPasta.jsf
			</to-view-id>
		</navigation-case>	
		<navigation-case>
			<from-outcome>formularioEmprestimoPasta</from-outcome>
			<to-view-id>
				/protected/jsps/emprestimoPasta/formularioEmprestimoPasta.jsf
			</to-view-id>
		</navigation-case>	
		<navigation-case>
			<from-outcome>listaEmprestimoPasta</from-outcome>
			<to-view-id>
				/protected/jsps/emprestimoPasta/listaEmprestimoPasta.jsf
			</to-view-id>
		</navigation-case>	
		<navigation-case>
			<from-outcome>formularioAlterarEmprestimoPasta</from-outcome>
			<to-view-id>
				/protected/jsps/emprestimoPasta/formularioAlterarEmprestimoPasta.jsf
			</to-view-id>
		</navigation-case>	
		<navigation-case>
			<from-outcome>formularioDevolverPasta</from-outcome>
			<to-view-id>
				/protected/jsps/emprestimoPasta/formularioDevolucaoPasta.jsf
			</to-view-id>
		</navigation-case>				
	</navigation-rule>

</faces-config>